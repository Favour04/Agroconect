{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true
  },
  "include": ["./**/*.ts", "./tests/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
